<header>

    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar ftco-navbar-light site-navbar-target" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand" href="index.html">StudentImport<span>.</span></a>
            <button class="navbar-toggler js-fh5co-nav-toggle fh5co-nav-toggle" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="oi oi-menu"></span> Menu
            </button>
            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav nav ml-auto">
                    <li class="nav-item"><a href="#" class="nav-link"><span>Home</span></a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<main>
    <%= flash[:notice]%>
    <div class="container-fluid px-0">
        <div class="row d-md-flex no-gutters slider-text align-items-center js-fullheight justify-content-end" style="height:670px;">
            <%= image_tag "students.png", class: "one-third js-fullheight align-self-end order-md-last img-fluid", style:"height: 600px;" %>
            <div class="one-forth d-flex align-items-center ftco-animate js-fullheight fadeInUp ftco-animated" style="height: 389px;">
                <div class="text mt-5">
                    <span class="subheading">Best Student Management System</span>
                    <h1>Easily Manage Student Data</h1>
                    <p>Our import will allow you to import student data in a few simple steps.</p>
                    <p><a id="getstarted" href="#main" class="btn btn-primary py-3 px-4">Get Started</a></p>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid" id="main" name="main">
        <div class="row">
            <div class="col-lg-3">
                <%= image_tag "student.png", class: "image" %>
            </div>
            <div class="col-lg-9">
                <div class="table-wrapper">
                    <!-- Table with panel -->
                    <div class="card card-cascade narrower">
                        <!--/Card image-->
                        <div class="px-4">

                            <div class="table-wrapper">
                                <!--Table-->
                                <table class="table table-hover mb-0">

                                    <!--Table head-->
                                    <thead>
                                        <tr>
                                            <th>
                                                <input class="form-check-input" type="checkbox" id="checkbox">
                                                <label class="form-check-label" for="checkbox" class="mr-2 label-table"></label>
                                            </th>
                                            <th class="th-lg">
                                                Student Number
                                            </th>
                                            <th class="th-lg">
                                                First Name
                                            </th>
                                            <th class="th-lg">
                                                Surname
                                            </th>
                                            <th class="th-lg">
                                                Course Code
                                            </th>
                                            <th class="th-lg">
                                                Course Description
                                            </th>
                                            <th class="th-lg">
                                                Grade
                                            </th>
                                        </tr>
                                    </thead>
                                    <!--Table head-->

                                    <!--Table body-->
                                    <tbody>
                                        <% @students.order("studentNumber").each do |student| %>
                                        <tr>
                                            <th scope="row">
                                                <input class="form-check-input" type="checkbox" id="checkbox1">
                                                <label class="form-check-label" for="checkbox1" class="label-table"></label>
                                            </th>
                                            <td><%= student.studentNumber %></td>
                                            <td><%= student.firstName %></td>
                                            <td><%= student.surname %></td>
                                            <td><%= student.courseCode %></td>
                                            <td><%= student.courseDescription %></td>
                                            <td><%= student.grade %></td>
                                        </tr>
                                        <%end%>
                                    </tbody>
                                    <!--Table body-->
                                </table>
                                <!--Table-->
                            </div>

                        </div>

                    </div>
                    <!-- Table with panel -->

                    <div>
                        <h4>Import Student Data</h4>
                        <%= form_tag import_students_path, multipart: true do %>
                        <%= file_field_tag :file %>
                        <%= submit_tag "Import CSV" %>
                        <%end%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>